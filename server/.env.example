# ElevenLabs API Key (get from https://elevenlabs.io)
ELEVENLABS_API_KEY=your_api_key_here

# Arduino serial ports (check Device Manager)
# Both Arduinos connected to this PC
ARDUINO_COM_PORT_A=COM9
ARDUINO_COM_PORT_B=COM3

# Flask server settings
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Press-to-talk hotkey
PTT_HOTKEY=ctrl+space

# Enable/disable PTT (set to false if you don't have a mic)
PTT_ENABLED=false
